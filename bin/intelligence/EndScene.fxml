<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="intelligence.EndScene">
   <center>
      <TextArea fx:id="textAreaEndScene" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Game Over!" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <HBox prefHeight="25.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="quitButton" mnemonicParsing="false" onAction="#buttonHandlerEndScene" text="Quit" />
            <Button fx:id="restartButton" mnemonicParsing="false" onAction="#buttonHandlerEndScene" text="Restart" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
